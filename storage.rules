rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Verification images for solved issues
    match /verifications/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.role == 'ngo' || request.auth.token.role == 'volunteer');
    }
    
    // Meal photos for schools
    match /meals/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'school';
    }
    
    // Documents and other uploads
    match /documents/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
